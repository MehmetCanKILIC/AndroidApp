<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7BC05"
    android:orientation="vertical"
    tools:context=".Yakit">

    <ProgressBar
        android:id="@+id/login_progressYakit"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/yakit_view"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#203040"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Yakıt Tüketimi Bilgilerini Giriniz"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#203040"
        android:id="@+id/yakitTipiEditText"
        android:hint="Yakıt Tipini Giriniz"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#203040"
        android:id="@+id/ortalamaYakitEditText"
        android:hint="Ortalama Yakıt Bilgisi Giriniz"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#203040"
        android:id="@+id/depoHacimEditText"
        android:hint="Depo Hacmi Giriniz"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="İlanı yayınla"
        android:id="@+id/yakitTuketimBilgisiButton"
        android:background="@drawable/menu_buton_back"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="Geri"
        android:id="@+id/yakitTuketimBilgisiButtonGeri"
        android:background="@drawable/menu_buton_back"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>